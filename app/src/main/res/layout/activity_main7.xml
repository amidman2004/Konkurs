<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity7">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/niz"
        android:background="@drawable/ramka_main2"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        >
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="30dp"
            android:id="@+id/glavn1"
            android:background="@drawable/home_vlt"
            ></ImageView>
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="Главная"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/glavn_text"
            ></TextView>

        <ImageView
            android:id="@+id/plat3"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:layout_toRightOf="@id/glavn1"
            android:background="@drawable/listic"></ImageView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:text="Платежи"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/glavn_text"
            android:id="@+id/plat_text"
            ></TextView>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/histr"
            android:background="@drawable/chasi"
            android:layout_toRightOf="@id/plat3"
            ></ImageView>
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="История"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/histr_text"
            android:layout_toRightOf="@id/plat_text"
            ></TextView>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/message"
            android:layout_toRightOf="@id/histr"
            android:id="@+id/dialog"
            ></ImageView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:text="Диалоги"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/histr_text"
            android:id="@+id/dialog_text"
            ></TextView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/verh"
        android:background="@drawable/ramka_main2"
        >
        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/vihod"
            android:background="@drawable/home_vlt"
            ></ImageView>
        <TextView
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:text="Дмитрий Андреевич"
            android:layout_toRightOf="@id/vihod"
            android:id="@+id/ET"
            android:gravity="center"
            android:textColor="@color/black"
            android:textSize="20dp"
            >
        </TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/vhod"
            android:layout_toRightOf="@id/ET"
            android:background="@drawable/logout"
            ></ImageView>
    </RelativeLayout>
    //////////////////////////

    <RelativeLayout
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/verh"
        android:background="#EDD9F1">

        <RelativeLayout
            android:layout_width="300dp"
            android:layout_height="190dp"
            android:layout_centerInParent="true"
            android:background="@drawable/krug_ramka">

            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="30dp"
                android:text=""
                android:textColor="@color/black"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/nomer1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="70dp"
                android:text="1234111143211"
                android:textColor="@color/black"
                android:textSize="14dp"></TextView>

            <TextView
                android:id="@+id/red"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@id/nomer1"
                android:layout_marginLeft="20dp"
                android:text="Карта заблокирована"
                android:textColor="@color/white"
                android:textSize="25dp"></TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="130dp"
                android:text="22000 рублей"
                android:textColor="@color/black"
                android:textSize="16dp"></TextView>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:layout_marginLeft="240dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/mir"></ImageView>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_red1"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="245dp"
            android:backgroundTint="#ff21"
            android:gravity="center"
            android:text="ПОПОЛНИТЬ"></Button>

        <Button
            android:id="@+id/btn_green1"
            android:layout_width="140dp"
            android:layout_height="55dp"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="35dp"
            android:layout_marginTop="245dp"
            android:layout_marginRight="35dp"
            android:backgroundTint="#58FF11"
            android:gravity="center"
            android:text="ПЕРЕВЕСТИ"></Button>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/card"
        android:id="@+id/poses_history1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="История операций"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:id="@+id/history1"
            ></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/poses_history1"
        android:id="@+id/zablock1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Заблокировать"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:id="@+id/zabl1"
            ></TextView>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/zablock1"
        android:id="@+id/rename1"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20dp"
            android:text="Переименовать"
            android:layout_centerVertical="true"
            android:textColor="@color/black"
            android:layout_marginLeft="25dp"
            android:id="@+id/rnm1"
            ></TextView>
    </RelativeLayout>


</RelativeLayout>