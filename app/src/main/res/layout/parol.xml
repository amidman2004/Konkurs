<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="200dp"
    android:background="@drawable/ramka_main2"
    android:id="@+id/zmn"
    >

    <TextView
        android:id="@+id/porol"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Подтвердите действие"
        android:textColor="@color/black"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/porol1"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@+id/porol"
        android:gravity="center"
        android:text="Введите пароль"
        android:textColor="@color/black"
        android:textSize="16dp"></TextView>

    <EditText
        android:id="@+id/tabl"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_below="@id/porol1"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/ramka_main2"></EditText>

    <Button
        android:id="@+id/voyti1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tabl"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="ПОДТВЕРДИТЬ"
        android:textColor="#1131FF" />

    <Button
        android:id="@+id/otmena1"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_below="@id/tabl"
        android:layout_marginLeft="215dp"
        android:layout_marginTop="10dp"
        android:backgroundTint="@color/white"
        android:text="Отмена"
        android:textColor="#1131FF" />
</RelativeLayout>