                android:layout_height="190dp"
                android:background="#ECC1ED"
                android:id="@+id/pink11"
                android:layout_centerHorizontal="true"
                >

                <TextView
                    android:id="@+id/nuzno11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"
                    android:text="Текущий счёт"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="120dp"
                    android:layout_marginTop="65dp"
                    android:text="11000,00 рублей"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="100dp"
                    android:text="111111123456"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/pink12"
                android:layout_width="300dp"
                android:layout_height="190dp"
                android:layout_below="@id/pink11"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="#ECC1ED">

                <TextView
                    android:id="@+id/nuzno12"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="60dp"
                    android:layout_marginTop="25dp"
                    android:text="Текущий счёт"
                    android:textColor="@color/white"
                    android:textSize="15dp"></TextView>

                <TextView
