<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".popolnitActivity"
    android:background="#E68BDD">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:id="@+id/niz"
        android:background="@drawable/ramka_main2"
        android:layout_alignParentBottom="true"
        android:backgroundTint="@color/black"
        >

        <ImageView
            android:id="@+id/glavn14"
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:background="@drawable/home_vlt"></ImageView>

        <TextView
            android:id="@+id/glavn_text"
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="85dp"
            android:backgroundTint="@color/white"
            android:text="Главная"
            android:textColor="@color/white"
            android:textSize="20dp"></TextView>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/listic"
            android:layout_toRightOf="@id/glavn14"
            android:id="@+id/plat16"
            ></ImageView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:text="Платежи"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@id/glavn_text"
            android:id="@+id/plat_text"
            ></TextView>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/histr"
            android:background="@drawable/chasi"
            android:layout_toRightOf="@id/plat16"
            ></ImageView>
        <TextView
            android:layout_width="80dp"
            android:layout_height="20dp"
            android:text="История"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/histr_text"
            android:layout_toRightOf="@id/plat_text"
            ></TextView>
        <ImageView
            android:layout_width="70dp"
            android:layout_height="match_parent"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="35dp"
            android:layout_marginLeft="30dp"
            android:background="@drawable/message"
            android:layout_toRightOf="@id/histr"
            android:id="@+id/dialog"
            ></ImageView>
        <TextView
            android:layout_width="85dp"
            android:layout_height="20dp"
            android:text="Диалоги"
            android:textColor="@color/white"
            android:backgroundTint="@color/white"
            android:textSize="20dp"
            android:layout_marginTop="85dp"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/histr_text"
            android:id="@+id/dialog_text"
            ></TextView>
    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/verh"
        android:background="@drawable/ramka_main2"
        >

        <ImageView
            android:id="@+id/vihod"
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:background="@drawable/home_vlt"></ImageView>

        <TextView
            android:id="@+id/ET"
            android:layout_width="270dp"
            android:layout_height="match_parent"
            android:layout_toRightOf="@id/vihod"
            android:gravity="center"
            android:text="Дмитрий Андреевич"
            android:textColor="@color/black"
            android:textSize="20dp"></TextView>

        <ImageView
            android:layout_width="60dp"
            android:layout_height="match_parent"
            android:id="@+id/vhod"
            android:layout_toRightOf="@id/ET"
            android:background="@drawable/logout"
            ></ImageView>
    </RelativeLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/gran"></TextView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/s_carti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_toLeftOf="@id/gran"
        android:background="#111DFF"

        android:text="С карты"
        android:textColor="#FFFFFF"
        android:textSize="12dp"></androidx.appcompat.widget.AppCompatButton>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/so_scheta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/verh"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:layout_toRightOf="@id/gran"
        android:background="#FFFFFF"
        android:text="Со счёта"
        android:textColor="#111DFF"
        android:textSize="12dp"
        app:rippleColor="@color/black"

        ></androidx.appcompat.widget.AppCompatButton>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/so_scheta"
        android:layout_marginTop="30dp"
        android:layout_above="@id/niz"
        >
        <RelativeLayout
