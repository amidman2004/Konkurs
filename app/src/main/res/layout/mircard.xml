<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:background="@drawable/krug_ramka">

        <TextView
            android:id="@+id/name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:text="Дебетовая карта"
            android:textColor="@color/black"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/nomer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="70dp"
            android:text="1234111143211"
            android:textColor="@color/black"
            android:textSize="14dp"></TextView>

        <TextView
            android:id="@+id/red2"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@id/nomer2"
            android:layout_marginLeft="20dp"
            android:text="Карта заблокирована"
            android:textColor="@color/white"
            android:textSize="25dp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="130dp"
            android:text="22000 рублей"
            android:textColor="@color/black"
            android:textSize="16dp">

        </TextView>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:layout_marginLeft="240dp"
            android:layout_marginTop="130dp"
            android:background="@drawable/visa">

        </ImageView>


    </RelativeLayout>
</RelativeLayout>